{
    "name": "lastzero/test-tools",
    "type": "library",
    "description": "Increases testing productivity by adding a service container and self-initializing fakes to PHPUnit",
    "keywords": [
        "phpunit",
        "testing",
        "dependency injection",
        "doctrine",
        "dbal",
        "mock",
        "fixture",
        "test double"
    ],
    "homepage": "https://github.com/lastzero/test-tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@lastzero.net",
            "homepage": "https://lastzero.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "phpunit/phpunit": ">=6.0",
        "symfony/dependency-injection": "^2.8|^3.0|^4.0",
        "symfony/yaml": "^2.8|^3.0|^4.0",
        "symfony/config": "^2.8|^3.0|^4.0",
        "mockery/mockery": "~0.9"
    },
    "require-dev": {
        "symfony/console": "^2.8|^3.0|^4.0",
        "symfony/framework-bundle": "^2.8|^3.0|^4.0",
        "doctrine/dbal": "~2.5",
        "basho/riak": "~2.0",
        "swiftmailer/swiftmailer": "5.*",
        "phing/phing": "^2.15"
    },
    "autoload": {
        "psr-4": { "TestTools\\": "src/" }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
